<?xml version="1.0"?>
<ruleset name="Humanitix Importer Coding Standards">
	<description>Custom coding standards for Humanitix Importer</description>

	<!-- Scan all files in directory -->
	<file>.</file>

	<!-- Exclude files and folders -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/assets/build/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/examples/*</exclude-pattern>

	<!-- Include the WordPress-Extra standard -->
	<rule ref="WordPress-Extra">
		<!-- Allow short array syntax -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax.Found" />
		<!-- Allow short open tags in templates -->
		<exclude name="Generic.PHP.DisallowShortOpenTag.EchoFound" />
	</rule>

	<!-- Include WordPress-Docs standard for documentation -->
	<rule ref="WordPress-Docs" />

	<!-- Let's also check that everything is properly documented -->
	<rule ref="Squiz.Commenting.FunctionComment" />
	<rule ref="Squiz.Commenting.ClassComment" />
	<rule ref="Squiz.Commenting.VariableComment" />

	<!-- Check for PHP cross-version compatibility -->
	<rule ref="PHPCompatibilityWP"/>
	<config name="testVersion" value="8.0-"/>

	<!-- Rules: Check PHP version compatibility -->
	<rule ref="PHPCompatibility"/>

	<!-- Check for security issues -->
	<rule ref="WordPress.Security"/>

	<!-- Performance rules -->
	<rule ref="WordPress.Performance"/>

	<!-- WordPress VIP rules -->
	<rule ref="WordPress.VIP"/>

	<!-- Custom rules -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="sg-humanitix-importer"/>
		</properties>
	</rule>

	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array" value="SG_HUMANITIX_IMPORTER,sg-humanitix-importer,SG\HumanitixImporter"/>
		</properties>
	</rule>

	<!-- Minimum supported WordPress version -->
	<config name="minimum_supported_wp_version" value="6.5"/>

	<!-- Show sniff codes in all reports -->
	<arg value="ps"/>

	<!-- Show progress and sniff codes -->
	<arg name="report" value="summary"/>
	<arg name="colors"/>
	<arg name="parallel" value="8"/>
	<arg name="extensions" value="php"/>
</ruleset> 