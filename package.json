{
    "name": "stomping-ground",
    "version": "1.0.0",
    "description": "Stomping Ground WordPress theme and plugin development",
    "scripts": {
        "dev": "webpack --mode=development --watch",
        "build": "webpack --mode=production",
        "lint:js": "eslint .",
        "lint:css": "stylelint '**/*.{css,scss}'",
        "lint:php": "composer phpcs",
        "lint": "npm run lint:js && npm run lint:css && npm run lint:php",
        "format:js": "prettier --write '**/*.{js,jsx}'",
        "format:css": "prettier --write '**/*.{css,scss}'",
        "format": "npm run format:js && npm run format:css"
    },
    "devDependencies": {
        "@babel/core": "^7.22.0",
        "@babel/preset-env": "^7.22.0",
        "@wordpress/eslint-plugin": "^17.0.0",
        "@wordpress/scripts": "^26.0.0",
        "babel-loader": "^9.1.2",
        "css-loader": "^6.8.1",
        "eslint": "^8.40.0",
        "mini-css-extract-plugin": "^2.7.6",
        "prettier": "^2.8.8",
        "sass": "^1.62.1",
        "sass-loader": "^13.3.2",
        "style-loader": "^3.3.3",
        "stylelint": "^15.6.2",
        "stylelint-config-wordpress": "^21.0.0",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1"
    }
} 